{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",  // Specify where to compile the server code
    "rootDir": "./src",  // Specify where to find the TypeScript files
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"  // Include all the server-side code in the src folder
  ]
}


